<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Fecha %><br>
    <%= f.date_field :fecha %>
  </div>
  <div class="field">
    <%= f.label :hora %><br>
    <%= f.time_field :hora %>
  </div>
    <div class="field">
    <%= f.label :motivo %><br>
    <%= f.text_area :motivo, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :menor %><br>
    <%= f.check_box :menor %>
  </div>
  <div class="field" id="menor">
    <%= f.label :apellido %><br>
    <%= f.text_field :apellido %><br>
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %><br>
    <%= f.label :cedula %><br>
    <%= f.text_field :cedula %><br>
    <%= f.label :telefono %><br>
    <%= f.text_field :telefono %>
    <%= f.hidden_field :estado %>
  </div>
  <div class="field">
    <%= f.label :paciente %><br>
    <%= f.collection_select(:patient_id, Patient.all , :id, :nombre, {:include_blank => true}, {:multiple => false})  %>
  </div>
  <div class="field">
    <%= f.label :doctor %><br>
    <%= f.collection_select(:doctor_id, Doctor.all, :id, :nombre, {:include_blank => true}, {:multiple => false})  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
