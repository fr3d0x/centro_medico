<%= render "layouts/pediatria" %>

<%= form_tag @citas_del_dia_pediatric_appointments_path, :method => 'get', :id => "pediatric_appointments_search" do%>
    <%= date_field_tag :search, params[:search] %>
    <%= submit_tag "buscar", :name => nil %>
<%end%>

<% if current_user.tipo == "medico" %>
	<div><%= render 'doc_index' %></div>
<%else%>
	<div><%= render 'pediatric_appointments' %></div>
<%end%>

<%= link_to "Imprimir citas pediatricas del dia", citas_del_dia_pediatric_appointments_path(@pediatric_appointments, :format => 'pdf', :search => params[:search]), target: "_blank" %>