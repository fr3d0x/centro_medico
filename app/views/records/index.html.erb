<p id="notice"><%= notice %></p>

<h1>Listado de Registros</h1>

<table>
  <thead>
    <tr>
      <th>Rec nemonico</th>
      <th>Rec descripcion</th>
      <th>Rec integer</th>
      <th>Rec char</th>
      <th>Rec varchar</th>
      <th>Rec float</th>
      <th>Rec boolean</th>
      <th>Rec fech</th>
      <th>Rec activo</th>
      <th>Table</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.rec_nemonico %></td>
        <td><%= record.rec_descripcion %></td>
        <td><%= record.rec_integer %></td>
        <td><%= record.rec_char %></td>
        <td><%= record.rec_varchar %></td>
        <td><%= record.rec_float %></td>
        <td><%= record.rec_boolean %></td>
        <td><%= record.rec_fech %></td>
        <td><%= record.rec_activo %></td>
        <td><%= record.table %></td>
        <td><%= link_to 'Mostrar', record %></td>
        <td><%= link_to 'Editar', edit_record_path(record) %></td>
        <td><%= link_to 'Destruir', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

