        <td><%= medical_history.condicion_medica_actual %></td>
        <td><%= medical_history.cirugias %></td>
        <td><%= medical_history.reg_its_sida %></td>
        <td><%= link_to 'Mostrar', medical_history %></td>
        <td><%= link_to 'Editar', edit_medical_history_path(medical_history) %></td>
